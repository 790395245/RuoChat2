# ==========================================
# RuoChat2 环境配置文件
# ==========================================

# Django 配置
# ==========================================
# 生成密钥方法：
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# 调试模式（生产环境请设置为 False）
DEBUG=True

# 允许访问的主机（生产环境请设置具体域名）
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# PostgreSQL 数据库配置
# ==========================================
DB_NAME=ruochat2
DB_USER=ruochat_user
DB_PASSWORD=your_strong_password_here
# Docker 部署时使用 postgres，本地部署使用 localhost
DB_HOST=localhost
DB_PORT=5432

# OpenAI API 配置
# ==========================================
# 获取 API 密钥：https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# 可选模型：gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview
# 自定义 API Base URL（用于 OpenAI 兼容接口，如 OneAPI、FastGPT等）
# 留空则使用默认 OpenAI 官方接口：https://api.openai.com/v1
# 示例: https://api.your-proxy.com/v1 或 http://localhost:3000/v1
OPENAI_API_BASE=

# 微信配置
# ==========================================
WECHAT_ENABLED=True

# Web 服务端口（Docker 部署时使用）
# ==========================================
WEB_PORT=8000

# 日志配置
# ==========================================
LOG_LEVEL=INFO
